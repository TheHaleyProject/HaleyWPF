<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utils="clr-namespace:Haley.Utils">

    <!--TOGGLE COLORS-->
    <SolidColorBrush x:Key="def_toggle_on" Color="#FF75B075"/>
    <SolidColorBrush x:Key="def_toggle_off" Color="#FFB07575"/>

    <!-- TEXT -->
    <SolidColorBrush x:Key="def_content" Color="#FF424242"/>
    <SolidColorBrush x:Key="def_content_inverted" Color="White"/>
    <SolidColorBrush x:Key="def_link" Color="#FF2A5896"/>
    <SolidColorBrush x:Key="def_link_hover" Color="IndianRed"/>

    <!-- BUTTONS -->
    <SolidColorBrush x:Key="def_button_background" Color="#FFE3E3E3"/>
    <SolidColorBrush x:Key="def_button_hover" Color="#664086ED"/>

    <!-- SCROLLBARS -->
    <SolidColorBrush x:Key="def_scroll_thumb" Color="#B23D3F41"/>
    <SolidColorBrush x:Key="def_scroll_repeat" Color="#CCE0E0E0"/>
    <SolidColorBrush x:Key="def_scroll_track" Color="#3353575B"/>

    <!-- BACKGROUNDS -->
    <SolidColorBrush x:Key="def_background_primary" Color="White"/>
    <SolidColorBrush x:Key="def_background_secondary" Color="#FFF8F8F8"/>
    <SolidColorBrush x:Key="def_background_tertiary" Color="#FFEBEBEB"/>

    <!-- BORDERS AND SHADOWS-->
    <SolidColorBrush x:Key="def_border_brush" Color="#B25B5F60"/>
    <Color x:Key="def_shadow">#FF2C7AEC</Color> <!--SAME AS DEF SECONDARY-->

    <!-- Items -->
    <SolidColorBrush x:Key="def_item_selected" Color="#CC3CC1F3"/>
    
    <!-- PRIMARY SPECIAL -->
    <SolidColorBrush x:Key="def_accent_primary" Color="#FF2B2B2B"/>
    <SolidColorBrush x:Key="def_accent_secondary" Color="#FF2C7AEC"/>
    <SolidColorBrush x:Key="def_accent_tertiary" Color="#FF2D5693"/>
    
    <!--Flexi Menu-->
    <SolidColorBrush x:Key="def_fleximenu_bg" Color="#FFE0DEDE"/>
    <SolidColorBrush x:Key="def_fleximenu_hoverbg" Color="#993D89BF"/>
    <SolidColorBrush x:Key="def_fleximenu_icon_hover" Color="#FFEEEEEE"/>

</ResourceDictionary>
