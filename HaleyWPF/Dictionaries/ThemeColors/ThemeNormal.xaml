<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utils="clr-namespace:Haley.Utils">
    
    <!--COMMON COLORS-->
    <SolidColorBrush x:Key="defOn" Color="#FF75B075"/>
    <SolidColorBrush x:Key="defOff" Color="#FFB07575"/>
  
    <!-- TEXT -->
    <SolidColorBrush x:Key="deftext_h1" Color="#FF060606"/>
    <SolidColorBrush x:Key="deftext_h2" Color="#FF262626"/>
    <SolidColorBrush x:Key="deftext_h3" Color="#FF3D3D3D"/>
    <SolidColorBrush x:Key="defContent" Color="#FF4E4E4E"/>
    <SolidColorBrush x:Key="defLink" Color="#FF2A5896"/>
    <SolidColorBrush x:Key="defLinkHover" Color="IndianRed"/>

    <!-- BUTTONS -->
    <SolidColorBrush x:Key="defButtonBackground" Color="#FFE4E4E4"/>
    <SolidColorBrush x:Key="defButtonHover" Color="#B26BD0E9"/>
    <SolidColorBrush x:Key="defButtonBorder" Color="#CC575E60"/>
    
    <!-- BACKGROUNDS -->
    <SolidColorBrush x:Key="defBackground" Color="White"/>
    <SolidColorBrush x:Key="defBackgroundSecondary" Color="#FFDCE7EF"/>

    <!-- BORDERS AND SHADOWS-->
    <SolidColorBrush x:Key="defBorderBrush" Color="#FF393939"/>
    <SolidColorBrush x:Key="defShadow" Color="#FF56B2F3"/>
    <SolidColorBrush x:Key="defHoverBorderBrush" Color="IndianRed"/>

    <!-- PRIMARY SPECIAL -->
    <SolidColorBrush x:Key="defPrimary" Color="#FF323030"/>
    
</ResourceDictionary>
