<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utils="clr-namespace:Haley.Utils">

    <!--COMMON COLORS-->
    <SolidColorBrush x:Key="defOn" Color="#FF75B075"/>
    <SolidColorBrush x:Key="defOff" Color="#FFB07575"/>

    <!-- TEXT -->
    <SolidColorBrush x:Key="defContent" Color="#FF424242"/>
    <SolidColorBrush x:Key="defContentInverted" Color="White"/>
    <SolidColorBrush x:Key="defLink" Color="#FF2A5896"/>
    <SolidColorBrush x:Key="defLinkHover" Color="IndianRed"/>

    <!-- BUTTONS -->
    <SolidColorBrush x:Key="defButtonBackground" Color="#FFE3E3E3"/>
    <SolidColorBrush x:Key="defButtonHover" Color="#992C7AEC"/>

    <!-- BACKGROUNDS -->
    <SolidColorBrush x:Key="defBackgroundPrimary" Color="White"/>
    <SolidColorBrush x:Key="defBackgroundSecondary" Color="#FFF8F8F8"/>
    <SolidColorBrush x:Key="defBackgroundTertiary" Color="#FFEBEBEB"/>

    <!-- BORDERS AND SHADOWS-->
    <SolidColorBrush x:Key="defBorderBrush" Color="#B25B5F60"/>
    <Color x:Key="defShadow">#FF2C7AEC</Color> <!--SAME AS DEF SECONDARY-->

    <!-- PRIMARY SPECIAL -->
    <SolidColorBrush x:Key="defPrimary" Color="#FF2B2B2B"/>
    <SolidColorBrush x:Key="defSecondary" Color="#FF2C7AEC"/>
    <SolidColorBrush x:Key="defTertiary" Color="#FF2D5693"/>

</ResourceDictionary>
