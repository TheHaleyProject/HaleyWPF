<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utils="clr-namespace:Haley.Utils">
    <!--COMMON COLORS-->
    <SolidColorBrush x:Key="defOn" Color="#FF5AA75A"/>
    <SolidColorBrush x:Key="defOff" Color="#FFCB8888"/>

    <!-- TEXT -->
    <SolidColorBrush x:Key="defContent" Color="#FFE5E5E5"/>
    <SolidColorBrush x:Key="defContentInverted" Color="#FF2F2F2F"/>
    <SolidColorBrush x:Key="defLink" Color="#FF30AD2C"/>
    <SolidColorBrush x:Key="defLinkHover" Color="IndianRed"/>

    <!-- BUTTONS -->
    <SolidColorBrush x:Key="defButtonBackground" Color="#FF141419"/>
    <SolidColorBrush x:Key="defButtonHover" Color="#99A4D9D4"/>

    <!-- BACKGROUNDS -->
    <SolidColorBrush x:Key="defBackgroundPrimary" Color="#FF22232C"/>
    <SolidColorBrush x:Key="defBackgroundSecondary" Color="#FF1B1C23"/>
    <SolidColorBrush x:Key="defBackgroundTertiary" Color="#FF17181E"/>

    <!-- BORDERS AND SHADOWS-->
    <SolidColorBrush x:Key="defBorderBrush" Color="#B2CED3D4"/>
    <Color x:Key="defShadow">#FF2C7AEC</Color>
    <!--SAME AS DEF SECONDARY-->

    <!-- Items -->
    <SolidColorBrush x:Key="defSelected" Color="#CC3CC1F3"/>
    
    <!-- PRIMARY SPECIAL -->
    <SolidColorBrush x:Key="defPrimary" Color="#FFF1E7BB"/>
    <SolidColorBrush x:Key="defSecondary" Color="#FF93D5CF"/>
    <SolidColorBrush x:Key="defTertiary" Color="#FF3E9D94"/>


</ResourceDictionary>
