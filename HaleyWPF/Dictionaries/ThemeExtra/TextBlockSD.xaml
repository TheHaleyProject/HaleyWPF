<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ml="clr-namespace:Haley.Models">

    <ResourceDictionary.MergedDictionaries>
        <ml:CommonDictionary Source="pack://application:,,,/Haley.WPF;component/Dictionaries/haleyBase.xaml"/>
    </ResourceDictionary.MergedDictionaries>

  <!--#region H1-->
    <Style x:Key="def_h1" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource def_content}"/>
        <Setter Property="FontSize" Value="{StaticResource internal_h1_fontsize}"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <Style x:Key="def_h1_inverted" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource def_content_inverted}"/>
        <Setter Property="FontSize" Value="{StaticResource internal_h1_fontsize}"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <Style x:Key="def_h1_Secondary" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource def_secondary}"/>
        <Setter Property="FontSize" Value="{StaticResource internal_h1_fontsize}"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>
    <!--#endregion-->

