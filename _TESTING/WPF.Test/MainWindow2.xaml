            </hw:PlainExpander>-->
        
      
            <hw:PlainExpander Header="RIGHT" VerticalAlignment="Top" CornerRadius="10" Margin="20" BorderBrush="Gray" BorderThickness="1" ShowShadow="True" ShadowColor="Green"  IconDefColor="IndianRed" ContentBackground="LightPink" ExpandDirection="Right" Grid.Row="1" MinWidth="30" IsExpanded="False" MinHeight="120" Icon="{StaticResource arrow_down_rounded}">
